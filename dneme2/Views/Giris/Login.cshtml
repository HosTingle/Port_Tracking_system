@model dneme2.Models.Hesap

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="css/style.css" rel="stylesheet">
<div class="jumbotron jumbotron-fluid mb-5">
    <div class="container text-center py-5">
        <h1 class="text-white display-3">Giris Ekranı</h1>
        <div class="d-inline-flex align-items-center text-white">
            <i class="fa fa-circle px-3"></i>
            <i class="fa fa-circle px-3"></i>
            <i class="fa fa-circle px-3"></i>
        </div>
    </div>
</div>
<hr />

<div class="container">

    <div class="d-flex justify-content-center h-20">
        <div class="col-md-4">

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="kulad" class="control-label">Kullanıcı Adı</label>
                    <input asp-for="kulad" class="form-control" />
                    <span asp-validation-for="kulad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sifre" class="control-label">Şifre</label>
                    <input asp-for="sifre" type="password" class="form-control" />
                    <span asp-validation-for="sifre" class="text-danger"></span>
                </div>
                @Html.CheckBoxFor(m=>m.benihatırla)
                Beni Hatırla
                <br />

                <button type="submit">Giriş</button>
                @if (ViewData["OnayMesaji"] != null)
                {
                    <br />
                    <br />
                    <label>@ViewData["OnayMesaji"]</label>
                }
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
