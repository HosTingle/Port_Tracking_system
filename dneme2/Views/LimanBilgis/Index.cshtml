@model IEnumerable<dneme2.Models.LimanBilgi>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron jumbotron-fluid mb-5">
    <div class="container text-center py-5">
        <h1 class="text-white display-3">Limanlar</h1>
        <div class="d-inline-flex align-items-center text-white">
        </div>
    </div>
</div>


<table class="table table-bordered table-striped" id='tbllist'>
    <thead class="bg-primary text-white">
        <tr>
            <th>
                Bulunduğu Şehir
            </th>
            <th>
                Liman Adı
            </th>
            <th>
                Bulunduğu Ülke
            </th>
            <th>
                Personel Sayısı
            </th>
            <th>
                Liman Fotoğrafı
            </th>
            <th>
                İçerisindeki Gemi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Bulseh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Limanad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bulülke)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Personsay)
                </td>
                <td>
                    <img src="@("~/Contents/"+item.Limanfoto)" asp-append-version=true width="50" height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGemilerNavigation.GemiAd)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdLima">Düzenle</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.IdLima">İncele</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdLima">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Kayıt Oluştur</a>
</p>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>

<script type="text/javascript">
    var js = jQuery.noConflict(true);

    js(document).ready(function () {
        js('#tbllist').DataTable({

        });
    });
</script>