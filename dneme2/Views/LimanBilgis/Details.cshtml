@model dneme2.Models.LimanBilgi

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<hr />
<hr />
<div class="container">
    <div class="d-flex justify-content-center h-50">
        <h1>Liman Bilgileri</h1>
        <hr />
    </div>
</div>

<hr />
<hr />
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Bulunduğu Şehir
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bulseh)
        </dd>
        <dt class="col-sm-2">
            Liman Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Limanad)
        </dd>
        <dt class="col-sm-2">
            Bulunduğu Ülke
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bulülke)
        </dd>
        <dt class="col-sm-2">
            Personel Sayısı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Personsay)
        </dd>
        <dt class="col-sm-2">
            Liman Fotoğrafı
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/Contents/"+Model.Limanfoto)" asp-append-version=true width="300" height="300" />
        </dd>
        <dt class="col-sm-2">
            Geminin Adı
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdGemilerNavigation!.GemiAd)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdLima" class="btn btn-primary">Düzenle</a> |
    <a asp-action="Index">Limanlara Geri Dön</a>
</div>
